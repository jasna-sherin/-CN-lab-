read -p "Enter a string: " str


rev_str=$(echo "$str" | rev)


if [ "$str" == "$rev_str" ]; then
    echo "Palindrome"
else
    echo "Not a palindrome"
fi
OUTPUT:-
[mca@localhost ~]$ ./week1.sh
Enter a string: gayathri
Not a palindrome
[mca@localhost ~]$ ./week1.sh
Enter a string: amma
Palindrome
[mca@localhost ~]$ vi week1.sh
[mca@localhost ~]$ 





